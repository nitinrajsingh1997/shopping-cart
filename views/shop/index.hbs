{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
        <img src="{{ this.imagePath }}" class="card-img-top" width="100%" height="300px">
        <div class="card-body">
            <h5 class="card-title">{{ this.title }}</h5>
            <p class="card-text">{{ this.description }}</p>
            <h6>Rs. {{ this.price }}</h6>
            <a href="/add-to-cart/{{this.id}}" class="btn btn-primary">Add to Cart</a>
        </div>
        </div>
    </div>
    {{/each}}
</div>
<br><br>
{{/each}}

