{{# if products }}
<div class="row">
    <div class="col-md-7">
        <ul class="list-group">
            {{#  each products }}
            <li class="list-group-item">
                <strong>{{ this.item.title }}</strong> &nbsp
                <span class="label label-success">Rs. {{this.pri}}</span>  &nbsp
                <a href="/remove/{{this.item._id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                <span class="badge badge-secondary float-right" >{{this.qty}}</span>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
<br>
<div class="row">
    <div class="col-md-6">
        <strong><h4>Total Price: {{ price }}</h4></strong>
    </div>
</div>
{{ else }}

<div class="row">
    <div class="col-md-6">
        <h2>No items in the cart</h2>
    </div>
</div>  
{{/if}}



